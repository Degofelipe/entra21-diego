    } let media = soma / 5
        console.log(media.toFixed(2))
}

7-{
    let impares = ""
    let numero = prompt("Digite um número")
    for (let i = 1 ; i <= numero ; i++) {
        if (i % 2 == 1)
        impares = i
        console.log(impares)
    }
}


