1-{
    let i = 0
    while ( i < 10 ) {
        console.log("Olá mundo") 
            i++
    }
}  

{
    let i = 0
    do {
        console.log("olá mundo")
        i++ }
        while (i < 10)
}

{
    for (let i = 0 ; i < 10 ; i++) {
        console.log("Olá mundo")}
}


2-{
    let contador = 1
    while (contador < 11) {
        console.log(`Estou aparecendo pela ${contador} na tela`)
        contador++
    }
}

{
    contador = 1
    do {
        console.log(`Estou aparecendo pela ${contador} na tela`)
        contador++
    } while (contador<11)
}

{
    for (let contador = 1; contador<11 ; contador++) {
        console.log(`Estou aparecendo pela ${contador} na tela`)
    }
}


3-{
    let i = 10
    while (i >= 0) {
        console.log(i)
        i--
    } console.log("fim")

}

{
    for (let i = 10 ; i >= 0 ; i--){
    console.log(i)
    } console.log("fim")
}

